{
  "name": "gracker-server",
  "version": "0.1.0",
  "description": "A simple grade tracking system",
  "main": "src/",
  "scripts": {
    "start": "node src/",
    "dev": "nodemon src/"
  },
  "eslintConfig": {
    "extends": [
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 8
    },
    "env": {
      "es6": true
    }
  },
  "prettier": {
    "printWidth": 90,
    "bracketSpacing": false,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --fix",
    "*.md": "prettier --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Jogius/gracker-server.git"
  },
  "author": "jogius",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Jogius/gracker-server/issues"
  },
  "homepage": "https://github.com/Jogius/gracker-server#readme",
  "devDependencies": {
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.1",
    "nodemon": "^2.0.5",
    "prettier": "^2.1.2"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.10.9"
  }
}
